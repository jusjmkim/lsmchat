	<body>
    <div class="container">

      <header>
        <div class="row">
          <h1>Welcome to LSM!</h1>
        </div>
      </header>

      <div class="row">
        <div class="col-md-3">
          <div id="members">
            <h3 class="lead">Members</h3>
          </div>
        </div>

        <div id="chatbox" class="col-lg-8">
          <div id="chat-text"></div>

          <div id="send-message" class="col-lg-9">
            <form method="POST" action="#">
              <input type="text" id="message" class="col-lg-6">
              <input type="submit" id="submit" value="Send" class="btn btn-primary btn-lg">
            </form>
          </div>
        </div>
      </div>

    </div>

    <div class="container">
      <footer>
        <div class="row">
          <div class="col-lg-12">
            <p>A side project by Justin Kim</p>
